@{
    ViewBag.Title = "Login";
    Layout = null;
}
<head>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <link href="~/css/login.css" rel="stylesheet" />
</head>

<body>
    <div id="login">
        <h3 class="text-center text-white pt-5">Consultorio Médico</h3>
        <div class="container">
            <div id="login-row" class="row justify-content-center align-items-center">
                <div id="login-column" class="col-md-6">
                    <div id="login-box" class="col-md-12">
                        <form id="login-form" class="form" action="@Url.Action("Registrar", "Usuario")" method="post">
                            <h3 class="text-center text-info">Registrarse</h3>
                            <div class="form-group">
                                <label for="correo" class="text-info">Correo:</label><br>
                                <input type="text" name="correo" id="correo" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="password" class="text-info">Contraseña:</label><br>
                                <input type="text" name="Clave" id="password" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="confirmpassword" class="text-info">Confirmar Contraseña:</label><br>
                                <input type="text" name="ConfirmarClave" id="confirmpassword" class="form-control">
                            </div>
                            @if (ViewData["Mensaje"] != null)
                            {
                                <div class="alert alert-danger" role="alert">
                                    @ViewData["Mensaje"]
                                </div>
                            }

                            <div class="form-group">
                                <br>
                                <button type="submit" name="submit" class="btn btn-info btn-md">Registrar</button>
                            </div>
                            <div id="register-link" class="text-right">
                                <a href="@Url.Action("Login", "Usuario")" class="text-info">Iniciar sesión</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
